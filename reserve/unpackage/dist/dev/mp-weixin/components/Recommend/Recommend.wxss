.recommend .swiper {
  height: 350rpx;
}
.recommend .swiper image {
  width: 100%;
  height: 350rpx;
}
.policyList {
  display: flex;
  margin: 8rpx;
}
.policyList .policyItem {
  flex: 1;
}
.policyList .policyItem image {
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
}
.policyList .policyItem .description {
  font-size: 26rpx;
}
.childList {
  display: flex;
  flex-wrap: wrap;
}
.childList .childItem {
  width: 20%;
  text-align: center;
  margin: 10rpx 0;
}
.childList .childItem image {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}
.childList .childItem .desc {
  font-size: 26rpx;
}
.categoryList .categoryItem {
  margin: 10rpx 0;
}
.categoryList .categoryItem .categoryImg {
  height: 500rpx;
  width: 100%;
}
.categoryList .categoryItem .categoryScroll {
  white-space: nowrap;
  height: 300rpx;
  display: flex;
}
.categoryList .categoryItem .categoryScroll .goodsItem {
  margin: 0 10rpx;
  height: 300rpx;
}
.categoryList .categoryItem .categoryScroll .goodsItem .goodsImg {
  background-color: #f5f5f5;
  height: 200rpx;
  width: 200rpx;
}
.categoryList .categoryItem .categoryScroll .goodsItem .text {
  font-size: 26rpx;
  white-space: pre-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

