<view class="cart"><scroll-view class="cartScroll" scroll-y="true"><view class="cartList"><block wx:for="{{cartList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="cartItem"><view data-event-opts="{{[['tap',[['changeSelect',['$0',index],[[['cartList','',index,'isSelected']]]]]]]}}" class="{{['iconfont','icon-zhengque',(item.isSelected)?'selected':'']}}" bindtap="__e"></view><view class="goodItem"><image src="{{item.picUrl}}" mode></image><view class="goodInfo"><view class="name">{{item.goodName}}</view><view class="price">{{"￥ "+item.goodPrice}}</view></view></view><view class="countCtrl"><text data-event-opts="{{[['tap',[['changeCount',[false,index]]]]]}}" class="sub" bindtap="__e">-</text><text class="count">{{item.count}}</text><text data-event-opts="{{[['tap',[['changeCount',[true,index]]]]]}}" class="add" bindtap="__e">+</text></view></view></block></view></scroll-view><view class="footer"><view data-event-opts="{{[['tap',[['changeAllSelect',[!isAllSelected]]]]]}}" class="{{['iconfont','icon-zhengque',(isAllSelected)?'selected':'']}}" bindtap="__e"></view><text class="selected">{{"已选 "+totalCount}}</text><text class="btn total">{{"合计:￥"+totalPrice}}</text><text class="btn order">下单</text></view></view>