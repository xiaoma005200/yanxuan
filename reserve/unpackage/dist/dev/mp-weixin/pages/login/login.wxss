.login {
  display: block;
  position: absolute;
  height: 100%;
  width: 100%;
  background: #356363;
}
.login .up {
  position: relative;
  margin-top: 150rpx;
  left: 100rpx;
  width: 545rpx;
  height: 750rpx;
  background: #fff;
  border-radius: 50rpx;
}
.login .up .dltext {
  margin-top: 50rpx;
  position: absolute;
  margin-left: 80rpx;
  width: 150rpx;
  height: 100rpx;
  font-size: 60rpx;
  font-family: Helvetica;
  color: #000;
  line-height: 100rpx;
  letter-spacing: 2rpx;
}
.login .up .count {
  margin-top: 200rpx;
  margin-left: 35rpx;
  position: absolute;
  display: flex;
  width: 450rpx;
  height: 80rpx;
  border-bottom: 3rpx solid #3a3939;
}
.login .up .count .phoneImg {
  margin-top: 5rpx;
  margin-left: 30rpx;
  width: 55rpx;
  height: 55rpx;
}
.login .up .count input {
  width: 200rpx;
  font-size: 25rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
}
.login .up .password {
  margin-top: 400rpx;
  margin-left: 35rpx;
  position: absolute;
  display: flex;
  width: 450rpx;
  height: 80rpx;
  border-bottom: 3rpx solid #3a3939;
}
.login .up .password .passwordImg {
  margin-top: 5rpx;
  margin-left: 30rpx;
  width: 55rpx;
  height: 55rpx;
}
.login .up .password input {
  width: 200rpx;
  font-size: 25rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
}
.login .up .password .eye {
  margin-top: 5rpx;
  margin-left: 65rpx;
  width: 55rpx;
  height: 55rpx;
}
.login .up .regist {
  font-size: 25rpx;
  margin-left: 85rpx;
  width: 370rpx;
  margin-top: 540rpx;
  position: absolute;
  display: flex;
  justify-content: space-between;
}
.login .up .login-btn {
  width: 350rpx;
  height: 50rpx;
  position: absolute;
  margin-top: 600rpx;
  margin-left: 85rpx;
}
.login .up .login-btn button {
  padding: 0rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}
.login .up .xieyi {
  margin-left: 10rpx;
  margin-top: 680rpx;
  width: 400rpx;
  display: flex;
  position: absolute;
}
.login .up .xieyi .isXY {
  margin-left: 85rpx;
/* 修改复选框的大小 */
  -webkit-transform: scale(0.6);
          transform: scale(0.6);
}
.login .up .xieyi .text-xy {
  margin-left: 10rpx;
  margin-top: 20rpx;
  color: #000;
  font-size: 18rpx;
}
.login .other-login {
  padding-left: 100rpx;
  display: flex;
  position: relative;
  width: 100%;
  height: 60rpx;
  padding-top: 50rpx;
}
.login .other-login .line {
  margin-left: 5rpx;
  margin-top: 18rpx;
  width: 120rpx;
  height: 3rpx;
  background-color: #fff;
}
.login .other-login .lText {
  color: #fff;
  font-size: 25rpx;
}
.login .Icon {
  margin-top: 10rpx;
  padding-top: 50rpx;
  position: relative;
  display: flex;
  width: 100%;
  height: 50rpx;
}
.login .Icon image {
  padding-left: 120rpx;
  width: 80rpx;
  height: 80rpx;
}

