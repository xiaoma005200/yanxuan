{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		}
	    ,
		{
		    "path" : "pages/category/category",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "分类",
		        "enablePullDownRefresh": false
		    }
		    
		}
		,{
            "path" : "pages/cart/cart",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "购物车",
                "enablePullDownRefresh": false
            }
            
        }
		,{
		    "path" : "pages/personal/personal",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "个人中心",
		        "enablePullDownRefresh": false
		    }   
		}
		,{
		    "path" : "pages/login/login",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "登录",
		        "enablePullDownRefresh": false
		    }
		    
		}
        ,{
            "path" : "pages/detail/detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "详情页",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",  //导航栏标题颜色
		"navigationBarTitleText": "严选商城", //导航栏标题文字内容
		"navigationBarBackgroundColor": "#BB2C08", //导航栏背景颜色
		"backgroundColor": "#F8F8F8" //导航栏背景颜色
	},
	"uniIdRouter": {},
	"easycom": {
	  "autoscan": true,
	  "custom": {
	    "^uni-(.*)": "@/components/uni-$1.vue", // 匹配components目录内的vue文件
	    "^vue-file-(.*)": "packageName/path/to/vue-file-$1.vue" // 匹配node_modules内的vue文件
	  }
	},
	"tabBar": {
		"color": "#999",
		"selectedColor": "#BB2C08",
		"list": [
			{
				"iconPath": "/static/tabBar/tab-home.png",
				"selectedIconPath": "/static/tabBar/tab-selected-home.png",
				"text": "首页",
				"pagePath": "pages/index/index"
			},
			{
				"iconPath": "/static/tabBar/tab-category.png",
				"selectedIconPath": "/static/tabBar/tab-selected-category.png",
				"text": "分类",
				"pagePath": "pages/category/category"
			},
			{
				"iconPath": "/static/tabBar/tab-cart.png",
				"selectedIconPath": "/static/tabBar/tab-selected-cart.png",
				"text": "购物车",
				"pagePath": "pages/cart/cart"
			},
			{
				"iconPath": "/static/tabBar/tab-my.png",
				"selectedIconPath": "/static/tabBar/tab-selected-my.png",
				"text": "我的",
				"pagePath": "pages/personal/personal"
			}
		]
	}
}
